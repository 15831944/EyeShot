<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:ddes="http://schemas.devdept.com/winfx/2008/xaml/control"
        xmlns:ddgr="http://schemas.devdept.com/winfx/2008/xaml/graphics"
        xmlns:ddds="http://schemas.devdept.com/winfx/2008/xaml/dataset"
        xmlns:wpfApplication1="clr-namespace:WpfApplication1"
        x:Class="WpfApplication1.MainWindow"        
        Title="MainWindow" Height="450" Width="630" FocusManager.FocusedElement="{Binding ElementName=model1}">
           
    <Grid>
        <wpfApplication1:MyModel x:Name="model1">
            <wpfApplication1:MyModel.Viewports>
                <ddes:Viewport>
                    <ddes:Viewport.ViewCubeIcon>
                        <ddes:ViewCubeIcon Visible="False" />
                    </ddes:Viewport.ViewCubeIcon>
                    <ddes:Viewport.Background>
                        <ddgr:BackgroundSettings TopColor="Black" StyleMode="Solid"/>
                    </ddes:Viewport.Background>                                                            
                </ddes:Viewport>
            </wpfApplication1:MyModel.Viewports>
        </wpfApplication1:MyModel>
    </Grid>
</Window>
